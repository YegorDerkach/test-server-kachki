# Server Configuration
SERVER_PORT=8080
PORT=8080

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@host/database?retryWrites=true&w=majority&appName=database

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production

